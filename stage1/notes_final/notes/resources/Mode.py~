from flask_restful import Resource
import notes.resources.Config as Config

class Mode(Resource):
    def put(self, mode):
        try:
            if mode < 1 or mode > 3:
                raise ValueError(
                    'Invalid mode ('+str(mode)+') requested. '+\
                    'Should be 1, 2, or 3.')
            Config.set_mode(mode)
        except Exception as e:
            return {'error':repr(e)}
        
        return {'mode':mode}

class ModeGet(Resource):
    def get(self):
        try:
            return {'mode':Config.get_mode()}
        except Exception as e:
            return {'error':repr(e)}
